pragma solidity ^0.8.15;

import { Script } from "forge-std/Script.sol";
import { console } from "forge-std/console.sol";

/// @title EnhancedCTFDeploy
/// @notice 部署增强版CTF合约，支持铸造和合并功能
/// @author Polymarket
contract EnhancedCTFDeploy is Script {
    
    function run() external {
        console.log("Deploying Enhanced CTF contract...");
        
        vm.startBroadcast();
        
        // 部署增强版CTF合约
        address ctf = deployEnhancedCTF();
        
        vm.stopBroadcast();
        
        console.log("Enhanced CTF contract deployed at:", ctf);
        console.log("Deployment completed successfully!");
    }
    
    function deployEnhancedCTF() internal returns (address) {
        // 增强版CTF合约的bytecode（包含铸造和合并功能）
        bytes memory bytecode = hex"";
        
        // 部署合约
        address ctf;
        assembly {
            ctf := create(0, add(bytecode, 0x20), mload(bytecode))
        }
        
        require(ctf != address(0), "Enhanced CTF deployment failed");
        return ctf;
    }
}
